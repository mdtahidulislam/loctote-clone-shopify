<header class="header">
    <div class="container">
        <div class="header-row d-flex flex-wrap justify-content-between align-items-center">
            <div class="header-item header-item--nav">
                <ul class="site-nav d-flex flex-wrap">
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">HOME</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">SHOP</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">ABOUT</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">STORIES</a>
                    </li>
                </ul>
            </div>
            <div class="header-item header-item--logo">
                <a href="#">
                    <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="LOGO">
                </a>
            </div>
            <div class="header-item header-item--icon">
                <div class="site-nav d-flex flex-wrap justify-content-end">
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-user' %}
                    </a>
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-search' %}
                    </a>
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-bag' %}
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
{% schema %}
{
    "name": "Header",
    "settings": [
        "type": "image_picker",
        "id": "logo",
        "label": "Set Logo",
        "default": "https://cdn.shopify.com/s/files/1/0602/6018/8342/files/logo-white.png?v=1637760765"
    ]
}
{% endschema %}