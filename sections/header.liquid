<header id="header" class="header">
    <div class="container">
        <div class="header-row d-flex flex-wrap justify-content-between align-items-center">
            <div class="header-item header-item--nav">
                <ul class="site-nav d-flex flex-wrap">
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">HOME</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">SHOP</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">ABOUT</a>
                    </li>
                    <li class="site-nav__item">
                        <a href="#" class="site-nav__link">STORIES</a>
                    </li>
                </ul>
            </div>
            <div class="header-item header-item--logo">
                <a href="#">
                    {% if section.settings.logo != blank %}
                        <!-- {% if section.settings.sticky_header == false %}
                            
                        {% endif %} -->
                        <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="LOGO">
                    {% else %}
                    <h1>{{ shop.name }}</h1>
                    {% endif %}
                </a>
            </div>
            <div class="header-item header-item--icon">
                <div class="site-nav d-flex flex-wrap justify-content-end">
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-user' %}
                    </a>
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-search' %}
                    </a>
                    <a href="#" class="site-nav__link site-nav__link--size">
                        {% include 'icon-bag' %}
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<script>    
    const header = document.querySelector('#header');
    const stickyValue = `{{ section.settings.sticky_header }}`;
    window.onscroll = () => {
        if (window.pageYOffset > 140 && stickyValue == 'true') {
            header.classList.add('header--sticky', 'is-bg');
        } else {
            header.classList.remove('header--sticky', 'is-bg');
        }
    }
</script>


{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Set Logo"
        },
        {
            "type": "checkbox",
            "id": "sticky_header",
            "label": "Set Sticky Header",
            "default": false
        }
    ]
}
{% endschema %}

