<section class="annocement" style="background-color: {{ section.settings.bg_color }}">
    <div class="container">
        <p class="text-center" style="color: {{ section.settings.text_color }}">{{ section.settings.text }}</p>
    </div>
</section>
{% schema %}
{
    "name": "Annoucement Bar",
    "settings": [
        {
            "type": "text",
            "id": "text",
            "label": "Announcement",
            "default": "Free shipping on all LOCTOTE orders over $75"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#333333"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#d8b764"
        }
    ]
}
{% endschema %}
